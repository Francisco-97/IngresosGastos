@model IEnumerable<IngresosGastos.Models.IngresosGastosFASS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","IngresosGastos")" class="btn btn-primary">Create new</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EsIngresos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @if(item.EsIngresos == true)
            {
                <p class="text-primary">Ingreso</p>
            }
            else
            {
                <p class="text-danger">Gasto</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="text-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class="text-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id },new { @class="text-danger" } )
        </td>
    </tr>
}

</table>
